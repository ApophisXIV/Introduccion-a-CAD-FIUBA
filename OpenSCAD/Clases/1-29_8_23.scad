$fn = 100;
H = 25;
D = 100;
d = 85;
Ha = 10;
Wa = 10;


/* -------------------------------------------------------------------------- */
/*                              Borde redondeado                              */
/* -------------------------------------------------------------------------- */
translate([0, 0, H])rotate_extrude(convexity=10)translate([d/2+(D-d)/4, 0, 0])circle(d=(D-d)/2);


/* -------------------------------------------------------------------------- */
/*                              Cilindro central                              */
/* -------------------------------------------------------------------------- */
difference() {

  cylinder(d = D, h = H);
  cylinder(d = d, h = H);

  for (i = [0:45:135]) {
    rotate([ 0, 0, i ]) translate([ -D, -Wa / 2, 0 ]) {
      cube([ 2 * D, Wa, Ha ]);
      translate([ 0, Wa / 2, Ha ]) rotate([ 0, 90, 0 ])
          cylinder(h = 2 * D, d = Wa);
    }
  }
}
